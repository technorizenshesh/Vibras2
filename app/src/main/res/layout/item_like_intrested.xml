<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:orientation="horizontal"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="@dimen/_60sdp"
    android:background="@color/white"
    android:padding="@dimen/_5sdp"
    >

    <RelativeLayout
        android:layout_margin="@dimen/_5sdp"
        android:layout_weight="1"
        android:id="@+id/cardView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/gray_cornors_5"
        >

        <ImageView
            android:id="@+id/ivInterest"
            android:layout_width="@dimen/_15sdp"
            android:layout_height="@dimen/_15sdp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/_10sdp"
            android:layout_marginRight="@dimen/_5sdp"
            android:src="@drawable/ic_camera_white"
            app:tint="@color/black" />

        <TextView
            android:id="@+id/txtName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="@dimen/_5sdp"
            android:layout_toRightOf="@id/ivInterest"
            android:drawableTint="@color/black"
            android:text="Photography"
            android:textColor="@color/black"
            android:textSize="@dimen/_11sdp"></TextView>

    </RelativeLayout>

    <androidx.cardview.widget.CardView
        android:visibility="gone"
        android:layout_weight="1"
        android:layout_margin="@dimen/_5sdp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:cardCornerRadius="@dimen/_10sdp"
        app:cardBackgroundColor="@color/lightgray"
        tools:ignore="MissingDefaultResource"
        >
        <TextView
            android:id="@+id/txtNameOne"
            android:drawablePadding="@dimen/_10sdp"
            android:drawableTint="@color/black"
            android:drawableLeft="@drawable/camera_icon"
            android:layout_marginLeft="@dimen/_5sdp"
            android:padding="@dimen/_5sdp"
            android:layout_gravity="center_vertical"
            android:textSize="@dimen/_12sdp"
            android:textColor="@color/black"
            android:text="Cooking"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            >
        </TextView>


    </androidx.cardview.widget.CardView>

</LinearLayout>

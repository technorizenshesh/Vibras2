<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    >

    <LinearLayout
        android:background="@color/white"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >

        <RelativeLayout
            android:background="@color/lightgray"
            android:id="@+id/RRtoolbar"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_45sdp"
            >

            <RelativeLayout
                android:id="@+id/RRback"
                android:layout_width="@dimen/_40sdp"
                android:layout_height="match_parent"
                android:layout_alignParentLeft="true">

                <ImageView
                    android:layout_width="@dimen/_25sdp"
                    android:layout_height="@dimen/_25sdp"
                    android:layout_centerInParent="true"
                    android:src="@drawable/back">

                </ImageView>

            </RelativeLayout>

            <TextView
                android:id="@+id/txtName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="@string/notifications"
                android:textColor="@color/black"
                android:textSize="@dimen/_12sdp"
                android:textStyle="bold" />

        </RelativeLayout>

     <LinearLayout
         android:padding="10sp"
         android:orientation="vertical"
         android:layout_width="match_parent"
         android:layout_height="wrap_content"
         >
         <RelativeLayout
             android:orientation="horizontal"
             android:layout_width="match_parent"
             android:layout_height="wrap_content">

             <TextView
                 android:layout_width="wrap_content"
                 android:layout_height="wrap_content"
                 android:layout_marginStart="@dimen/_10sdp"
                 android:layout_marginTop="@dimen/_10sdp"
                 android:layout_marginEnd="@dimen/_10sdp"
                 android:layout_marginBottom="@dimen/_10sdp"
                 android:text="Allow Notifications"
                 android:textColor="@color/black"
                 android:textSize="@dimen/_12sdp"
                 android:textStyle="bold" />

             <Switch
                 android:layout_margin="@dimen/_10sdp"
                 android:id="@+id/switchNotification"
                 android:checked="true"
                 android:layout_alignParentEnd="true"
                 android:layout_width="wrap_content"
                 android:layout_height="wrap_content"
                 />
         </RelativeLayout>



         <TextView

             android:layout_marginTop="@dimen/_10sdp"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:layout_centerInParent="true"
             android:text="Lorem ipsum dolor sit amet, consetetur sadi pscing elitr, sed diam nonumym"
           android:visibility="gone"
             android:textAllCaps="true"
             android:textColor="@color/gray"
             android:textSize="@dimen/_10sdp"
             />
         <RelativeLayout
             android:orientation="horizontal"
             android:layout_width="match_parent"
             android:layout_height="wrap_content">

             <TextView
                 android:layout_width="wrap_content"
                 android:layout_height="wrap_content"
                 android:layout_marginStart="@dimen/_10sdp"
                 android:layout_marginTop="@dimen/_10sdp"
                 android:layout_marginEnd="@dimen/_10sdp"
                 android:layout_marginBottom="@dimen/_10sdp"
                 android:text="@string/email_notifications"
                 android:textColor="@color/black"
                 android:textSize="@dimen/_12sdp"
                 android:textStyle="bold" />

             <Switch
                 android:layout_alignParentEnd="true"
                 android:layout_margin="@dimen/_10sdp"
                 android:id="@+id/switchEmailNotification"
                 android:layout_width="wrap_content"
                 android:layout_height="wrap_content"
                 >
             </Switch>
         </RelativeLayout>


         <TextView
             android:visibility="gone"
             android:layout_marginTop="@dimen/_10sdp"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:layout_centerInParent="true"
             android:text="Lorem ipsum dolor sit amet, consetetur sadi pscing elitr, sed diam nonumym"
             android:textAllCaps="true"
             android:textColor="@color/gray"
             android:textSize="@dimen/_10sdp"
             />
         <RelativeLayout
             android:orientation="horizontal"
             android:layout_width="match_parent"
             android:layout_height="wrap_content">

             <TextView
                 android:layout_width="wrap_content"
                 android:layout_height="wrap_content"
                 android:layout_marginStart="@dimen/_10sdp"
                 android:layout_marginTop="@dimen/_10sdp"
                 android:layout_marginEnd="@dimen/_10sdp"
                 android:layout_marginBottom="@dimen/_10sdp"
                 android:text="@string/push_notifications"
                 android:textColor="@color/black"
                 android:textSize="@dimen/_12sdp"
                 android:textStyle="bold" />

             <Switch
                 android:layout_margin="@dimen/_10sdp"

                 android:id="@+id/switchPushNotification"
                 android:checked="true"
                 android:layout_alignParentEnd="true"
                 android:layout_width="wrap_content"
                 android:layout_height="wrap_content"
                />
         </RelativeLayout>


         <TextView
             android:visibility="gone"

             android:layout_marginTop="@dimen/_10sdp"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:layout_centerInParent="true"
             android:text="Lorem ipsum dolor sit amet, consetetur sadi pscing elitr, sed diam nonumym"
             android:textAllCaps="true"
             android:textColor="@color/gray"
             android:textSize="@dimen/_10sdp"
             />

         <TextView
             android:layout_marginTop="@dimen/_40sdp"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:text="@string/general_notifcations"
             android:textColor="@color/black"
             android:textSize="@dimen/_12sdp"
             android:visibility="gone"
             android:textStyle="bold" />

         <Switch
             android:layout_gravity="right"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:visibility="gone"
             >
         </Switch>

         <TextView
             android:layout_marginTop="@dimen/_10sdp"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:visibility="gone"
             android:layout_centerInParent="true"
             android:text="Lorem ipsum dolor sit amet, consetetur sadi pscing elitr, sed diam nonumym"
             android:textAllCaps="true"
             android:textColor="@color/gray"
             android:textSize="@dimen/_10sdp"
             />

         <RelativeLayout
             android:id="@+id/btnSave"
             android:layout_width="match_parent"
             android:layout_height="wrap_content"
             android:padding="@dimen/_12sdp"
             android:layout_marginHorizontal="@dimen/_15sdp"
             android:layout_marginTop="@dimen/_40sdp"
             android:background="@drawable/border_btn">

             <TextView
                 android:layout_width="wrap_content"
                 android:layout_height="wrap_content"
                 android:layout_centerInParent="true"
                 android:layout_marginLeft="20sp"
                 android:text="@string/save"
                 android:textColor="@color/white"
                 android:textSize="@dimen/_13sdp"
                 android:textStyle="bold" />

         </RelativeLayout>


     </LinearLayout>


    </LinearLayout>

</layout>
